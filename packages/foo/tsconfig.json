{
  "include": [
    "src"
  ],
  "compilerOptions": {
    "module": "nodenext",
    "target": "esnext",
    "moduleResolution": "nodenext",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noEmitOnError": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "jsx": "react",
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@default-scope/*": [
        "packages/*/src"
      ]
    }
  }
}